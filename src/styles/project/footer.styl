.footer
	font-size 14px
	line-height 20px
	color #ababab

	&__top
		padding-top 40px
		padding-bottom 30px

	&__bottom
		padding-top 20px
		padding-bottom 20px
		background #141414


	&__list
		margin 0
		padding 12px 0 0
		list-style-type none

	&__list-item
		padding 18px 0
		border-top 1px dotted #c5c5c5
		color #a0a0a0

	// &__item

	&__title
		margin 0 0 2px
		padding 0
		display block
		font-size inherit
		font-weight bold
		text-transform uppercase
		color inherit

		& a
			color inherit
			text-decoration none

			&:hover
				text-decoration underline

	&__text
		margin 0
		padding 0

	&__meta
		text-transform none

	&__img
		box-sizing border-box
		width 100%
		vertical-align top
		border 3px solid #777
		transition .3s

		&:hover
			border-color #c5c5c5


	&__img-grid
		a
			display block

		.cols
			margin-left -5px
			margin-right -5px

		.col
			padding 0 5px 10px
